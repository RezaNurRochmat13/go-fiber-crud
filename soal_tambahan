// Soal 4
func showLastName(name string, wg *sync.WaitGroup) {

	defer wg.Done()

	fmt.Println("Worker is starting..")
	fmt.Println("My name is : ", name)
	time.Sleep(100 * time.Millisecond)

	fmt.Println("Worker is done..")
}

